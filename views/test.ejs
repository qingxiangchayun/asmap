<!DOCTYPE html>
<html>
<head>
<title></title>
<link rel='stylesheet' href='/css/index.css' />
<link rel='stylesheet' href='/css/bootstrap.css' />
<style type="text/css">
.main{width:1000px;margin: 0 auto;}
input,p{width:200px;height: 30px;line-height: 30px;margin: 20px;}
</style>
</head>
<body>

<% include includes/header.ejs %>

<div class="main">

	<pre>
		后端返回内容：

		res.render('test',{
			title : 'fe/test',
			txt1 : '<%= txt1 %>',
			txt2 : '<%= txt2 %>',
			txt3 : '<%= txt3 %>'
		});

	</pre>

	<input type="text" value="<%- txt1 %>" />
	<input type="text" value="<%- txt1 %>" />
	<input type="text" value="<%- txt3 %>" />

	<div id="div1"><%- txt1 %></div>
	<div id="div2"><%- txt2 %></div>
	<div id="div3"><%- txt3 %></div>

	<button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
	  修改
	</button>
</div>


<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">Modal title</h4>
      </div>
      <div class="modal-body">
        	<input id="editInput" value="" style="width:300px;" />
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>


<script type="text/javascript" data-main="../js/underscore" src="/js/require-jquery.js"></script>
<script type="text/javascript"  src="/js/bootstrap.js"></script>

<script type="text/javascript">

$(function(){
	var txt = $('#div3').text();
	var $editInput = $('#editInput');

	$editInput.val(txt);
});

</script>

</body>
</html>
